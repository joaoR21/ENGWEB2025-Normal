extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1= tit

    .w3-container
      table.w3-table-all.w3-margin-bottom
        tr
          th ID da edição:
          td= obj._id
        tr
          th Ano da edição:
          td= obj.anoEdição
        tr
          th Pais organizador:
          td= obj.organizacao
        tr
          th País vencedor:
          td= obj.vencedor

    if obj.musicas && obj.musicas.length
      h2.w3-margin-top Músicas desta edição
      table.w3-table-all
        thead
          tr
            th Título
            th Intérprete
            th País
        tbody
          each musica in obj.musicas
            tr
              td= musica.título
              td= musica.intérprete
              td= musica.país
    else
      p.w3-margin-top Nenhuma música registada para esta edição.

    footer.w3-container.w3-teal
      div.w3-center
        span generated by EngWeb2025 - 
        a(href='/') Voltar

extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
    .w3-container
      table.w3-table-all
        tr
          th id da edição
          th ano da edição
          th país organizador
          th país vencedor
        each c in lista
          tr
            td 
              a(href='/' + c._id)= c._id
            td= c.anoEdição
            td 
              a(href='/paises/' + c.organizacao)= c.organizacao
            td 
              a(href='/paises/' + c.vencedor)= c.vencedor
    footer.w3-container.w3-blue 
      span generated by EngWeb2025  
      |  
      a(href='/') voltar

extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
        h1= tit
    .w3-container
      table.w3-table-all
        tr
          th NIPC:
          td= NIPC
        tr
          th entidade:
          td= name
        tr
          th valor total dos contratos:
          td= sum.toLocaleString("pt-PT",{style:"currency",currency:"EUR"})
    br
    .w3-container
        table.w3-table-all
            tr
                th idcontrato 
                th objectoContrato
                th dataCelebracaoContrato
                th precoContratual
                th NIPC_entidade_comunicante
                th entidade_comunicante
            each c in lcontr
                tr
                    td= c._id
                    td= c.objectoContrato
                    td= c.dataCelebracaoContrato
                    td= c.precoContratual.toLocaleString("pt-PT",{style:"currency",currency:"EUR"})
                    td= c.NIPC_entidade_comunicante
                    td= c.entidade_comunicante
    footer.w3-container.w3-blue 
        span generated by EngWeb2025 
        a(href='/') voltar
